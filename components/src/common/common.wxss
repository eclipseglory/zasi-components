
.flex-row {
  display: flex;
  justify-content: center;
  align-items: center
}

.flex-column {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center
}

.flex-space-between {
  justify-content: space-between;
}

.flex-space-around {
  justify-content: space-around;
}

.flex-end{
  justify-content: flex-end;
}

.flex-start{
  justify-content: flex-start;
}

.separator {
  background-color: whitesmoke;
  width: 100%;
  height: 1px;
}

.margin-v {
  margin: 2vw 0;
}

.shadow {
  box-shadow: 2px 2px 3px lightgrey;
}

.border-box-container {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

.padding-container {
  padding: 2vw 4vw;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}


.full-width {
  width: 100%;
}

.full-height {
  height: 100%;
}

.full-fill {
  width: 100%;
  height: 100%
}

.round {
  border-radius: 50%;
}

.round-corner {
  border-radius: 2vw
}

.round-corner-bottom{
  border-radius: 2vw 2vw 0px 0px;
}

.light-border{
  border: solid 1px gray
}

.cell-row {
  width: 100%;
  display: flex;
  box-sizing: border-box;
  align-items: center;
  justify-content: space-between;
  border-bottom: solid 1px whitesmoke;
}

.small-font{
  font-size:0.9em;
}

.ellipsis-multiple-line-text{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:5;
  overflow: hidden;
  text-overflow:ellipsis;
  box-sizing: border-box;
}

