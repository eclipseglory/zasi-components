.full-fill {
  width: 100%;
  height: 100%
}

.page{
  width: 100%;
  height: 100%;
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.description {
  width: 90%;
  text-align: center;
  box-sizing: border-box;
  font-size: 0.75em;
  margin-top: 40px;
  margin-bottom: 40px;
  padding: 1em;
  border-radius: 5px;
  background-color: whitesmoke
}

.flex-column{
  display:flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}